				<?php if(isset($student)): ?>
					<?php $e = Enrollment::where('curriculum_subject_id', $s->id)->where('student_id',$student->id)->first(); ?>
				<?php endif; ?>
				
				<tr>
					
					<td><?php echo $s->subject->sub_code; ?></td>
